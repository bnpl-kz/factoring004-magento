<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="bnplpartners_factoring004magento" translate="label comment" type="text" sortOrder="100"
                   showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Factoring 0-0-4</label>

                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1"
                       showInStore="0">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="title" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Title</label>
                    <validate>required-entry</validate>
                </field>

                <field id="description" translate="label" type="textarea" sortOrder="32" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Description</label>
                    <validate>required-entry</validate>
                </field>

                <field id="logo" translate="label" type="BnplPartners\Factoring004Magento\Form\LogoField" sortOrder="33" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Logo</label>
                    <backend_model>BnplPartners\Factoring004Magento\Model\Logo</backend_model>
                    <upload_dir config="system" scope_info="1">factoring004</upload_dir>
                    <base_url type="media" scope_info="1">factoring004</base_url>
                    <comment>Extensions: jpg, jpeg, gif, png</comment>
                </field>

                <field id="api_host" translate="label" type="text" sortOrder="35" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>API Host</label>
                    <validate>required-entry validate-url</validate>
                </field>

                <field id="oauth_preapp_token" translate="label" type="textarea" sortOrder="40" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>OAuth Preapp Token</label>
                    <validate>required-entry</validate>
                </field>

                <field id="oauth_accounting_service_token" translate="label" type="textarea" sortOrder="45" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>OAuth Accounting Service Token</label>
                    <validate>required-entry</validate>
                </field>

                <field id="partner_name" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Partner Name</label>
                    <validate>required-entry</validate>
                </field>

                <field id="partner_code" translate="label" type="text" sortOrder="55" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Partner Code</label>
                    <validate>required-entry</validate>
                </field>

                <field id="point_code" translate="label" type="text" sortOrder="60" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Point Code</label>
                    <validate>required-entry</validate>
                </field>

                <field id="partner_email" translate="label" type="text" sortOrder="65" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Partner Email</label>
                    <validate>required-entry validate-email</validate>
                </field>

                <field id="partner_website" translate="label" type="text" sortOrder="70" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Partner Website</label>
                    <validate>required-entry validate-url</validate>
                    <backend_model>BnplPartners\Factoring004Magento\Model\PartnerWebsite</backend_model>
                </field>

                <field id="agreement_file" translate="label" type="file" sortOrder="75" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Agreement File</label>
                    <backend_model>BnplPartners\Factoring004Magento\Model\AgreementFile</backend_model>
                    <upload_dir config="system" scope_info="1">factoring004</upload_dir>
                    <base_url type="media" scope_info="1">factoring004</base_url>
                    <comment>Upload an agreement PDF file if you need to show it a customer</comment>
                </field>

                <field id="confirmable_delivery_methods" translate="label" type="multiselect" sortOrder="80" showInDefault="1"
                       showInWebsite="1" showInStore="0">
                    <label>OTP Confirmable Delivery Methods</label>
                    <source_model>BnplPartners\Factoring004Magento\Model\DeliveryMethod</source_model>
                    <tooltip>Order status changes such as shipment, refund and cancel placed with a selected delivery method will be confirmed by OTP</tooltip>
                </field>

                <field id="order_status" translate="label" type="select" sortOrder="85" showInDefault="1"
                       showInWebsite="1" showInStore="0">
                    <label>New Order Status</label>
                    <source_model>Magento\Sales\Model\Config\Source\Order\Status</source_model>
                    <validate>required-entry</validate>
                    <tooltip>Override default status for new orders</tooltip>
                </field>

                <field id="order_paid_status" translate="label" type="select" sortOrder="90" showInDefault="1"
                       showInWebsite="1" showInStore="0">
                    <label>Paid Order Status</label>
                    <source_model>Magento\Sales\Model\Config\Source\Order\Status</source_model>
                    <validate>required-entry</validate>
                </field>

                <field id="order_declined_status" translate="label" type="select" sortOrder="95" showInDefault="1"
                       showInWebsite="1" showInStore="0">
                    <label>Declined Order Status</label>
                    <source_model>Magento\Sales\Model\Config\Source\Order\Status</source_model>
                    <validate>required-entry</validate>
                </field>
            </group>
        </section>
    </system>
</config>
